---
import SocialMedia from "./SocialMedia.astro";
import FooterAddress from "./Address.astro";
import LaneList from "./LaneList.astro";

const pages = [
  "About",
  "Attorney",
  "Chris Wegner",
  "Practices",
  "Contact",
];

const pagesLinks = [
  "#about",
  "#attorney",
  '/attorneys/cwegner',
  "#practices",
  "#contact",
];


const practicesNames =[
  'Asset Protection',
  "Business Law",
  'Healthcare Law',
  'Intellectual Property',
  'Mergers & Acquisitions',
  "Tax & Tax Planning"
]

const practiceLinks=[
  '/practices/asset-protection',
  '/practices/business-law',
  '/practices/healthcare-law',
  '/practices/ip',
  '/practices/mergers-and-acquisitions',
  '/practices/tax',
]

const resources = ["Pay Online", "Common Forms", "Contact Us"];

const resourcesLinks = ["", "", ""];

const legals = ["Privacy Policy", "Terms & Conditions"];

const legalsLinks = ["../../legal/privacy-policy", "../../legal/terms-and-conditions"];
---

<footer class="footer-section">
  <div class="footer-container">
    <div class="footer-road">
      <div class="footer-lane footer-social-media">
        <SocialMedia />
      </div>
    </div>
    <div class="footer-road">
      <div class="footer-lane">
        <FooterAddress />
      </div>
      <div class="footer-lane">
        <LaneList label="Site Pages" items={pages} links={pagesLinks} />
        <LaneList label="Popular Practices" items={practicesNames} links={practiceLinks} />

      </div>
      <div class="footer-lane">
        <LaneList
          label="Legal Links"
          items={legals}
          links={legalsLinks}
        />
      </div>
      <div class="footer-lane"></div>
    </div>
    <div class="footer-road">
      <div class="footer-lane footer-copyright">
        <div class="footer-disclaimer">
          *Attorney Advertising*
        </div>
        <div class="footer-copyright-copyright" data-state="IDX-v71a">
        &copy; 2006 - {new Date().getFullYear()} Wegner Law PLLC. All rights reserved.
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    background-color: #444;
    color: whitesmoke;
    font-size: .9rem;
    min-height: 25vh;
    padding: 0 1rem;
    line-height: 1.3;
  }

  .footer-road {
    display: block;
  }

  .footer-lane {
    padding: 0 1rem;
  }

  .footer-copyright {
    text-align: center;
    padding: 1rem;
    width: 100%;
  }

  @media (min-width: 768px) {

    .footer-section{
      font-size: .8rem;
    }
    .footer-copyright {
      text-align: right;
      margin: 2rem 0 1rem 0;
      display: flex;
      justify-content: space-between;
    }

    .footer-road {
      display: flex;
      width: 100%;
    }

    .footer-lane {
      padding: 0 1rem;
      flex-shrink: 0;
      min-width: 25%;
    }

    .footer-social-media {
      width: 100%;
    }

    .footer-container {
      max-width: 1400px;
      margin: 0 auto;
    }
  }
</style>