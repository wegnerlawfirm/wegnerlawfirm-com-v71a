---
import Menu from '../components/menu/_Menu.astro'
import Footer from '../components/footer/_Footer.astro'
import "./global.css";

interface Props {
	title: string;
	description?: string;
	pageUrl?: string;
	site?: string;
}

const {
	title,
	description = "Wegner Law PLLC is a leading law firm in south Florida",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link
			rel="preconnect"
			href="https://fonts.gstatic.com"
			crossorigin=""
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
		/>
		<meta name="description" content={description}/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Menu/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {
		--primaryFont: "Roboto", sans-serif;
		--titleFont: "Roboto Slab", serif;

		--logoColor: rgb(178, 34, 34);
		--titleColor: rgb(30, 144, 255);
		--altTitleColor: rgb(16, 78, 139);
		--backgroundColor: rgb(211, 211, 211);
		--accentColor: rgb(255, 215, 0);

		--pageWidth: 1000px;

		line-height: 1.6;
		font-family: var(--primaryFont);
		font-size: 18px;
		color: #333;
		font-weight: 400;
		scroll-behavior: smooth;
	}

	@media (min-width: 768px) {
		:root {
			font-size: 16px;
		}
	}

	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	html,
	body {
		width: 100vw;
		min-height: 100vh;
		overflow-x: hidden;
		overflow-y: auto;
	}

	h2 {
		font-family: var(--titleFont);
		color: var(--titleColor);
		font-weight: 300;
		font-size: 2rem;

		padding-bottom: 1rem;

		@media (min-width: 768px) {
			width: 100%;
			max-width: var(--pageWidth);
			margin: 0 auto;
		}
	}

	h3 {
		font-size: 1.3rem;
		font-weight: 400;
		color: var(--altTitleColor)
	}
</style>
